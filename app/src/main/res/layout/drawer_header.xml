                android:id="@+id/businessLL"
                android:layout_margin="@dimen/_5sdp">
                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="5sp"
                    android:src="@drawable/business"
                    android:layout_marginLeft="10sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Business"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginLeft="20sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/economyLL"
                android:layout_margin="@dimen/_5sdp">
                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="5sp"
                    android:src="@drawable/economy"
                    android:layout_marginLeft="10sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Economy"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginLeft="20sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/travelLL"
                android:layout_margin="@dimen/_5sdp">
                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="5sp"
                    android:src="@drawable/travel"
                    android:layout_marginLeft="10sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Travel"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginLeft="20sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/techLL"
                android:layout_margin="@dimen/_5sdp">
                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:src="@drawable/tech"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="5sp"
                    android:layout_marginLeft="10sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tech"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginLeft="20sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/privacyLL"
                android:layout_margin="@dimen/_5sdp">
                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:src="@drawable/lifestyle"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="5sp"
                    android:layout_marginLeft="10sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lifestyle"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginLeft="20sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/sport"
                android:layout_margin="@dimen/_5sdp">
                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/sport"
                    android:padding="5sp"
                    android:layout_marginLeft="10sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sport"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginLeft="20sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/grey"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>